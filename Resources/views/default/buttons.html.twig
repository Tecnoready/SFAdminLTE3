{# Boton de guardado de un nuevo elemento #}
{% macro save_new(params) %}
    {% set options = {}|resolve_options(params,{ required: ["role"] }) %}
    {% from '@SFAdminLTE3/default/buttons.html.twig' import save as save %}
    {{ save({uri: constant('App\\Controller\\BaseController::ACTION_SAVE_NEW_VALUE'),role: options.role }) }}
