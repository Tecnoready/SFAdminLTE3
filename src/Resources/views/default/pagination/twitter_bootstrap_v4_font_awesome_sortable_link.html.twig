<a{% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    {{ title }}
        {% if app.request.get('sort') == key %}
            {% if app.request.get('direction') == 'desc' %}
                <i class="fa fa-fw fa-arrow-down"></i>
            {% else %}
                <i class="fa fa-fw fa-arrow-up"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort"></i>
        {% endif %}
</a>
